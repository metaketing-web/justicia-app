# Base de données MySQL/PostgreSQL sur AWS RDS
DATABASE_URL=mysql://user:password@your-rds-endpoint:3306/justicia

# JWT Secret pour les sessions
JWT_SECRET=your-jwt-secret-key-here

# Configuration OAuth (si utilisé)
OAUTH_SERVER_URL=https://your-oauth-server.com
OWNER_OPEN_ID=your-owner-open-id
OWNER_NAME=Your Name

# Configuration S3 pour le stockage de fichiers
AWS_S3_BUCKET=your-s3-bucket-name
AWS_S3_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key

# API OpenAI pour le RAG et l'IA
OPENAI_API_KEY=your-openai-api-key

# Port du serveur backend
PORT=3001

# URL du frontend (pour CORS)
FRONTEND_URL=https://app.justicia.ci
